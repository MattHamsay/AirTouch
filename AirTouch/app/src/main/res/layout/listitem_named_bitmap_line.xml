<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:orientation="horizontal"
			  android:weightSum="3">

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="100dp"
		android:layout_weight="1"
		android:orientation="vertical"
		android:id="@+id/listitem_named_cell_1"
		android:gravity="center_horizontal|top">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/listitem_named_bitmap_1_name"
			android:layout_weight="0"/>

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/listitem_named_bitmap_1_image"
			android:scaleType="centerInside"
			android:layout_weight="1"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="100dp"
		android:layout_weight="1"
		android:orientation="vertical"
		android:id="@+id/listitem_named_cell_2"
		android:gravity="center_horizontal|top">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/listitem_named_bitmap_2_name"
			android:layout_weight="0"/>

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/listitem_named_bitmap_2_image"
			android:scaleType="centerInside"
			android:layout_weight="1"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="100dp"
		android:layout_weight="1"
		android:orientation="vertical"
		android:id="@+id/listitem_named_cell_3"
		android:gravity="center_horizontal|top">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/listitem_named_bitmap_3_name"
			android:layout_weight="0"/>

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/listitem_named_bitmap_3_image"
			android:scaleType="centerInside"
			android:layout_weight="1"/>

	</LinearLayout>

</LinearLayout>
